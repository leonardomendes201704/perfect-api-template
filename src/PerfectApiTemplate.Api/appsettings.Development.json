{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    }
  },
  "Outbox": {
    "BatchSize": 10,
    "PollingSeconds": 2
  },
  "Logging": {
    "Requests": {
      "SamplingPercent": 100
    },
    "Queue": {
      "Capacity": 2000
    }
  },
  "Email": {
    "Smtp": {
      "Host": "smtp.dev.local",
      "Port": 1025,
      "UseSsl": false,
      "Username": "",
      "Password": "",
      "DefaultFrom": "no-reply@dev.local"
    },
    "Inbox": {
      "Protocol": "Imap",
      "Host": "imap.dev.local",
      "Port": 143,
      "UseSsl": false,
      "Username": "",
      "Password": "",
      "MaxMessagesPerPoll": 25
    },
    "Processing": {
      "OutboxPollingSeconds": 2,
      "InboxPollingSeconds": 20,
      "BatchSize": 10,
      "MaxAttempts": 3
    }
  }
}


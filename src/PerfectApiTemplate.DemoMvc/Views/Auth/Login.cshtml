@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewData["Subtitle"] = "Store a JWT or authenticate with email/password";
}

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Login with API credentials</h5>
                <form method="post" asp-action="Login">
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Password"></span>
                    </div>
                    <button class="btn btn-primary" type="submit">Login</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Paste a JWT token</h5>
                <form method="post" asp-action="Login">
                    <input type="hidden" name="mode" value="token" />
                    <div class="mb-3">
                        <label class="form-label">Token</label>
                        <textarea asp-for="Token" class="form-control" rows="6"></textarea>
                        <span class="text-danger small" asp-validation-for="Token"></span>
                    </div>
                    <button class="btn btn-outline-primary" type="submit">Store Token</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

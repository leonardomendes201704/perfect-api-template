@using PerfectApiTemplate.DemoMvc.Infrastructure
@{
    var token = Context.Session.GetStringValue(SessionKeys.JwtToken);
}
<header class="topbar">
    <div class="d-flex align-items-center justify-content-between">
        <div>
            <div class="page-title">@ViewData["Title"]</div>
            <div class="text-muted small">@ViewData["Subtitle"]</div>
        </div>
        <div class="d-flex align-items-center gap-3">
            <span class="badge @(string.IsNullOrWhiteSpace(token) ? "text-bg-secondary" : "text-bg-success")">
                @(string.IsNullOrWhiteSpace(token) ? "Logged out" : "Logged in")
            </span>
            @if (string.IsNullOrWhiteSpace(token))
            {
                <a class="btn btn-sm btn-outline-primary" asp-controller="Auth" asp-action="Login">Login</a>
            }
            else
            {
                <form asp-controller="Auth" asp-action="Logout" method="post">
                    <button class="btn btn-sm btn-outline-danger" type="submit">Logout</button>
                </form>
            }
        </div>
    </div>
</header>

@model StatCardViewModel
<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <div class="text-muted small">@Model.Title</div>
                <div class="h5 mb-0">@Model.Value</div>
                @if (!string.IsNullOrWhiteSpace(Model.Subtitle))
                {
                    <div class="text-muted small mt-1">@Model.Subtitle</div>
                }
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.BadgeText))
            {
                <span class="badge @Model.BadgeCssClass">@Model.BadgeText</span>
            }
        </div>
        @if (!string.IsNullOrWhiteSpace(Model.ActionText) && !string.IsNullOrWhiteSpace(Model.ActionUrl))
        {
            <div class="mt-3">
                <a class="btn btn-sm btn-outline-primary" href="@Model.ActionUrl">@Model.ActionText</a>
            </div>
        }
    </div>
</div>

@model EmptyStateViewModel
<div class="empty-state d-flex flex-column align-items-center text-center">
    <i class="@Model.IconClass fs-2 text-muted mb-2"></i>
    <div>@Model.Message</div>
    @if (!string.IsNullOrWhiteSpace(Model.ActionText) && !string.IsNullOrWhiteSpace(Model.ActionUrl))
    {
        <a class="btn btn-sm btn-outline-primary mt-3" href="@Model.ActionUrl">@Model.ActionText</a>
    }
</div>

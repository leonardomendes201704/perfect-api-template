@{
    ViewData["Title"] = "UI Showcase";
    ViewData["Subtitle"] = "Reusable components for future screens";
}

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h6>Forms</h6>
                <form>
                    <div class="mb-3">
                        <label class="form-label">Text input</label>
                        <input class="form-control" placeholder="Type something" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Select</label>
                        <select class="form-select">
                            <option>Option A</option>
                            <option>Option B</option>
                        </select>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" />
                        <label class="form-check-label">Enable notifications</label>
                    </div>
                    <button class="btn btn-primary" type="button">Primary Action</button>
                </form>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <h6>Alerts and Badges</h6>
                <div class="alert alert-info">This is an informational alert.</div>
                <span class="badge text-bg-success me-2">Success</span>
                <span class="badge text-bg-warning">Warning</span>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h6>Tables</h6>
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Alpha</td>
                            <td><span class="badge text-bg-success">Active</span></td>
                            <td>Just now</td>
                        </tr>
                        <tr>
                            <td>Beta</td>
                            <td><span class="badge text-bg-secondary">Paused</span></td>
                            <td>2 hours ago</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <h6>Modal</h6>
                <button class="btn btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#demoModal">Open Modal</button>
                <div class="modal fade" id="demoModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Confirm Action</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to proceed?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary">Confirm</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

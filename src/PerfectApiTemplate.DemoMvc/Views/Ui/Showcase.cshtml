@using Microsoft.AspNetCore.Html
@using PerfectApiTemplate.DemoMvc.ViewModels.Shared
@model object
@functions {
    private sealed record ShowcaseRow(string Name, string Status, string Updated);
}
@{
    ViewData["Title"] = "UI Showcase";
    ViewData["Subtitle"] = "Reusable components for future screens";

    ViewData["Breadcrumbs"] = new List<BreadcrumbItem>
    {
        new("Home", Url.Action("Index", "Home"), false),
        new("UI Showcase", string.Empty, true)
    };

    var rows = new List<ShowcaseRow>
    {
        new("Alpha", "Active", "Just now"),
        new("Beta", "Paused", "2 hours ago"),
        new("Gamma", "Pending", "Yesterday")
    };

    var pagination = new PaginationViewModel
    {
        PageNumber = 1,
        PageSize = 10,
        TotalCount = 42,
        Action = "Showcase",
        Controller = "Ui"
    };

    var queryOptions = new GridQueryOptions
    {
        Action = "Showcase",
        Controller = "Ui",
        PageSize = 10
    };

    var grid = new GridBuilder<ShowcaseRow>()
        .WithTitle("Tables")
        .WithSubtitle("Sample table using GridBuilder")
        .WithItems(rows)
        .WithPagination(pagination)
        .WithQueryOptions(queryOptions)
        .WithTableCssClass("table align-middle mb-0 grid-table")
        .AddColumn("Name", item => new HtmlString(item.Name))
        .AddColumn("Status", item =>
        {
            var badgeClass = item.Status == "Active" ? "text-bg-success" : item.Status == "Paused" ? "text-bg-secondary" : "text-bg-warning";
            return new HtmlString($"<span class=\"badge {badgeClass}\">{item.Status}</span>");
        })
        .AddColumn("Updated", item => new HtmlString(item.Updated))
        .Build();

    var infoList = new InfoListViewModel
    {
        Title = "Status overview",
        Items = new List<InfoListItem>
        {
            new() { Label = "Active projects", Value = "12", BadgeText = "Healthy", BadgeCssClass = "text-bg-success" },
            new() { Label = "Pending reviews", Value = "3", BadgeText = "Attention", BadgeCssClass = "text-bg-warning" },
            new() { Label = "Open incidents", Value = "0", BadgeText = "Clear", BadgeCssClass = "text-bg-light border" }
        }
    };

    var quickLinks = new QuickLinksViewModel
    {
        Title = "Quick Links",
        Links = new List<QuickLinkItem>
        {
            new() { Text = "Customers", Url = Url.Action("Index", "Customers") ?? "#", IconClass = "bi bi-people" },
            new() { Text = "Email Test", Url = Url.Action("Index", "Email") ?? "#", IconClass = "bi bi-envelope" },
            new() { Text = "Logs", Url = Url.Action("Requests", "Logs") ?? "#", IconClass = "bi bi-activity" }
        }
    };

    var emptyState = new EmptyStateViewModel
    {
        Message = "No items were found. Start by creating your first record.",
        ActionText = "Create record",
        ActionUrl = "#",
        IconClass = "bi bi-archive"
    };

    var typographySection = new FormSectionViewModel { Title = "Typography", Description = "Hierarchy and helper text" };
    var buttonSection = new FormSectionViewModel { Title = "Buttons", Description = "Primary, outline, and sizes" };
    var alertSection = new FormSectionViewModel { Title = "Alerts", Description = "Contextual feedback" };
    var infoListSection = new FormSectionViewModel { Title = "Info list", Description = "Compact key/value summary" };
    var quickLinksSection = new FormSectionViewModel { Title = "Quick links", Description = "Primary navigation shortcuts" };
    var formSection = new FormSectionViewModel { Title = "Forms", Description = "Common inputs and layout" };
    var validationSection = new FormSectionViewModel { Title = "Input groups & validation", Description = "Helper text and feedback states" };
    var navigationSection = new FormSectionViewModel { Title = "Pagination & breadcrumbs", Description = "Navigation patterns" };
    var emptySection = new FormSectionViewModel { Title = "Empty state", Description = "Guidance when no data exists" };
    var tabsSection = new FormSectionViewModel { Title = "Tabs & accordion", Description = "Content grouping patterns" };
    var progressSection = new FormSectionViewModel { Title = "Progress & spinners", Description = "Loading indicators" };
    var listGroupSection = new FormSectionViewModel { Title = "List groups", Description = "Compact navigation lists" };
    var modalSection = new FormSectionViewModel { Title = "Modal & toast", Description = "Overlays and transient messages" };
}

<div class="row g-4">
    <div class="col-12">
        <div class="d-flex flex-wrap gap-2">
            <span class="badge rounded-pill text-bg-primary">Design System</span>
            <span class="badge rounded-pill text-bg-light border">Bootstrap 5</span>
            <span class="badge rounded-pill text-bg-dark">Demo MVC</span>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <partial name="_FormSection" model="typographySection" />
                <h1 class="display-6">Display heading</h1>
                <p class="lead">Lead paragraph for page intros and hero sections.</p>
                <p>Regular body text for descriptions and supporting details.</p>
                <p class="text-muted">Muted helper text for secondary info.</p>
                <div class="d-flex flex-wrap gap-2">
                    <span class="badge text-bg-light border">Label</span>
                    <span class="badge text-bg-secondary">Tag</span>
                    <span class="badge text-bg-info">Info</span>
                </div>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <partial name="_FormSection" model="buttonSection" />
                <div class="d-flex flex-wrap gap-2">
                    <button class="btn btn-primary" type="button">Primary</button>
                    <button class="btn btn-outline-primary" type="button">Outline</button>
                    <button class="btn btn-success" type="button">Success</button>
                    <button class="btn btn-warning" type="button">Warning</button>
                    <button class="btn btn-danger" type="button">Danger</button>
                    <button class="btn btn-light border" type="button">Secondary</button>
                </div>
                <div class="mt-3 d-flex flex-wrap gap-2">
                    <button class="btn btn-sm btn-outline-secondary" type="button">Small</button>
                    <button class="btn btn-lg btn-primary" type="button">Large</button>
                </div>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <partial name="_FormSection" model="alertSection" />
                <div class="alert alert-success">Operation completed successfully.</div>
                <div class="alert alert-warning">Attention: review pending items.</div>
                <div class="alert alert-danger">Error: something went wrong.</div>
                <div class="alert alert-info">Tip: use filters to narrow results.</div>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <partial name="_FormSection" model="infoListSection" />
                <partial name="_InfoList" model="infoList" />
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <partial name="_FormSection" model="quickLinksSection" />
                <partial name="_QuickLinks" model="quickLinks" />
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <partial name="_FormSection" model="formSection" />
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Text input</label>
                            <input class="form-control" placeholder="Type something" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input class="form-control" type="email" placeholder="name@example.com" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Select</label>
                            <select class="form-select">
                                <option>Option A</option>
                                <option>Option B</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Date</label>
                            <input class="form-control" type="date" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Textarea</label>
                            <textarea class="form-control" rows="3" placeholder="Add notes..."></textarea>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" />
                                <label class="form-check-label">Enable notifications</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="button">Primary Action</button>
                            <button class="btn btn-light border ms-2" type="button">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <partial name="_FormSection" model="validationSection" />
                <div class="input-group mb-3">
                    <span class="input-group-text">https://</span>
                    <input class="form-control" placeholder="example.com" />
                </div>
                <input class="form-control is-invalid" value="Invalid value" />
                <div class="invalid-feedback d-block">Please provide a valid value.</div>
                <input class="form-control is-valid mt-3" value="Valid value" />
                <div class="valid-feedback d-block">Looks good.</div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <partial name="_Grid" model="grid" />
        <div class="card mt-4">
            <div class="card-body">
                <partial name="_FormSection" model="navigationSection" />
                <partial name="_Pagination" model="pagination" />
                <div class="mt-3">
                    <partial name="_Breadcrumbs" />
                </div>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <partial name="_FormSection" model="emptySection" />
                <partial name="_EmptyState" model="emptyState" />
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <partial name="_FormSection" model="tabsSection" />
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-one" type="button">Overview</button></li>
                    <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-two" type="button">Details</button></li>
                </ul>
                <div class="tab-content border border-top-0 p-3">
                    <div class="tab-pane fade show active" id="tab-one">Overview content.</div>
                    <div class="tab-pane fade" id="tab-two">Detailed content.</div>
                </div>
                <div class="accordion mt-3" id="demoAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">Accordion item</button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#demoAccordion">
                            <div class="accordion-body">Expandable content goes here.</div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo">Second item</button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#demoAccordion">
                            <div class="accordion-body">Another panel content.</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <partial name="_FormSection" model="progressSection" />
                <div class="progress mb-2" style="height: 8px;">
                    <div class="progress-bar" style="width: 60%"></div>
                </div>
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar bg-success" style="width: 85%"></div>
                </div>
                <div class="mt-3 d-flex gap-2 align-items-center">
                    <div class="spinner-border spinner-border-sm" role="status"></div>
                    <div class="spinner-grow spinner-grow-sm text-primary" role="status"></div>
                    <span class="text-muted">Loading indicators</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <partial name="_FormSection" model="listGroupSection" />
                <div class="list-group mb-3">
                    <a class="list-group-item list-group-item-action active">Active item</a>
                    <a class="list-group-item list-group-item-action">Secondary item</a>
                    <a class="list-group-item list-group-item-action">Another item</a>
                </div>
                <partial name="_FormSection" model="modalSection" />
                <button class="btn btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#demoModal">Open Modal</button>
                <button class="btn btn-outline-secondary ms-2" type="button" id="toastTrigger">Show Toast</button>
                <div class="modal fade" id="demoModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Confirm Action</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to proceed?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary">Confirm</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="toast-container position-fixed bottom-0 end-0 p-3">
                    <div id="demoToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header">
                            <strong class="me-auto">Demo</strong>
                            <small>Just now</small>
                            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                        <div class="toast-body">This is a demo toast message.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const toastTrigger = document.getElementById('toastTrigger');
        const toastElement = document.getElementById('demoToast');
        if (toastTrigger && toastElement && window.bootstrap) {
            const toast = new bootstrap.Toast(toastElement);
            toastTrigger.addEventListener('click', () => toast.show());
        }
    </script>
}

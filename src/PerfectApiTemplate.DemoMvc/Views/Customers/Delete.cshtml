@model CustomerDetailsViewModel
@{
    ViewData["Title"] = "Deactivate Customer";
    ViewData["Subtitle"] = "Confirm customer deactivation";
}

@if (Model.Customer is null)
{
    <div class="empty-state">Customer not found.</div>
}
else
{
    <div class="card border-danger">
        <div class="card-body">
            <h5 class="card-title text-danger">Deactivate @Model.Customer.Name?</h5>
            <p class="text-muted">This will mark the customer as inactive. You can re-enable by editing directly in the database.</p>
            <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Customer.Id">
                <div class="d-flex gap-2">
                    <button class="btn btn-danger" type="submit">Deactivate</button>
                    <a class="btn btn-light border" asp-action="Details" asp-route-id="@Model.Customer.Id">Cancel</a>
                </div>
            </form>
        </div>
    </div>
}

@model CustomerDetailsViewModel
@{
    ViewData["Title"] = "Customer Details";
    ViewData["Subtitle"] = "View customer information";
}

@if (Model.Customer is null)
{
    <div class="empty-state">Customer not found.</div>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Customer.Name</h5>
            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="text-muted small">Email</div>
                    <div>@Model.Customer.Email</div>
                </div>
                <div class="col-md-6">
                    <div class="text-muted small">Date of Birth</div>
                    <div>@Model.Customer.DateOfBirth.ToString("yyyy-MM-dd")</div>
                </div>
                <div class="col-md-6 mt-3">
                    <div class="text-muted small">Created At</div>
                    <div>@Model.Customer.CreatedAtUtc.ToLocalTime().ToString("g")</div>
                </div>
            </div>
            <div class="mt-4 d-flex gap-2">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Customer.Id">Edit</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Customer.Id">Delete</a>
                <a class="btn btn-light border" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
}

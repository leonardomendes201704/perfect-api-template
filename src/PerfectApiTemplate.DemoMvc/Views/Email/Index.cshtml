@model EmailTestViewModel
@{
    ViewData["Title"] = "Email Test";
    ViewData["Subtitle"] = "Send or preview email content";
}

<div class="row g-3">
    <div class="col-lg-7">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">From</label>
                        <input asp-for="From" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">To</label>
                        <input asp-for="To" class="form-control" />
                        <span class="text-danger small" asp-validation-for="To"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Subject</label>
                        <input asp-for="Subject" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Subject"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Body</label>
                        <textarea asp-for="Body" class="form-control" rows="6"></textarea>
                        <span class="text-danger small" asp-validation-for="Body"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input asp-for="IsHtml" class="form-check-input" />
                        <label class="form-check-label">HTML Body</label>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-primary" type="submit" formaction="@Url.Action("Send")">Send</button>
                        <button class="btn btn-outline-secondary" type="submit" formaction="@Url.Action("Preview")">Preview</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card mb-3">
            <div class="card-body">
                <h6>Preview</h6>
                @if (string.IsNullOrWhiteSpace(Model.PreviewHtml))
                {
                    <div class="empty-state">No preview generated.</div>
                }
                else
                {
                    <div class="border rounded p-2 bg-white">@Html.Raw(Model.PreviewHtml)</div>
                }
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h6>Recent Sends</h6>
                @if (Model.RecentLogs.Count == 0)
                {
                    <div class="empty-state">No email activity yet.</div>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var log in Model.RecentLogs)
                        {
                            <li class="list-group-item">
                                <div class="fw-semibold">@log.Subject</div>
                                <div class="text-muted small">@log.To - @log.SentAtUtc.ToLocalTime().ToString("g")</div>
                                <span class="badge text-bg-success">@log.Status</span>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
